<div class="contenido-superior vacante contenedor">
	<div class="caja">
		<p class="etiqueta">Empresa</p>
		<p class="nombre">{{vacante.empresa}}</p>
	</div>
	<div class="caja">
		<p class="etiqueta">Ubicación</p>
		<p class="nombre">{{vacante.ubicacion}}</p>
	</div>
	<div class="caja">
		<p class="etiqueta">Contrato</p>
		<p class="nombre contrato">{{vacante.contrato}}</p>
	</div>
	<div class="caja">
		<p class="etiqueta">Salario</p>
		<p class="nombre">$ {{vacante.salario}}</p>
	</div>
	{{!-- <div class="caja">
		<p class="etiqueta">Publicada</p>
		<p class="nombre">{{fechaNormalizada}}</p>
	</div> --}}
</div>

<div class="vacante-contenedor contenedor">
	<main class="contenido">
		<h2>Descripción del Puesto</h2>
		<div class="vacante-descripcion">
			{{{vacante.descripcion}}}
		</div>

		<h2 style="margin-top: 30px;">Fecha de publicacion de la vacante</h2>
		<p style="color: white;">{{fechaNormalizada}}</p>


		{{!-- <a href="/vacantes/editar/{{vacante.url}}" class="btn btn-azul editar-btn">Editar Vacante</a> --}}
	</main>
	<aside class="sidebar">
		<h2>Conocimientos Deseados</h2>
		<ul class="skills">
			{{#each vacante.skills}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
	</aside>
</div>

<div class="contenedor datos-reclutador">
	<div class="enviar-datos">
		<h2>Contactar Reclutador</h2>
		<p>Llena el siguiente formulario, sube tu curriculum y pronto te contactaremos</p>

		<form method="POST" action="/vacantes/{{vacante.url}}" class="default-form" enctype="multipart/form-data">
			<div class="campo">
				<label>Nombre</label>
				<input type="text" name="nombre" placeholder="Tu Nombre">
			</div>
			<div class="campo">
				<label>E-mail</label>
				<input type="email" name="email" placeholder="Tu Email">
			</div>
			<div class="campo">
				<label>CV (PDF)</label>
				<input type="file" name="cv">
			</div>
			<p style="color: gray; margin-top: -40px; margin-bottom: 35px;">Peso maximo 100Kb</p>
			<div class="campo">
				<input type="submit" class="btn btn-verde" value="Enviar">
			</div>
		</form>

	</div>

	<div class="info-reclutador">
		<h2>Información Reclutador</h2>
		{{#if vacante.autor.nombre}}
		<p>{{vacante.autor.nombre}}</p>
		{{/if}}
		{{#if vacante.autor.imagen}}
		<img src="/uploads/perfiles/{{vacante.autor.imagen}}">
		{{/if}}
	</div>
</div>

<a href="/" class="btn btn-azul editar-btn" style="
		width: 25%;
		float: right;
		margin-bottom: 45px;
		margin-top: -25px;
	">Volver al Inicio</a>
<main class="lista-candidatos">
  <h2>Lista de Candidatos</h2>
  {{#if candidatos.length}}
  {{#each candidatos}}
  <div class="candidato">
    <div class="caja">
      <p class="etiqueta">Nombre:</p>
      <p class="nombre">{{nombre}}</p>
    </div>
    <div class="caja">
      <p class="etiqueta">E-mail:</p>
      <p class="nombre">{{email}}</p>
    </div>
    <div class="caja">
      <a href="/uploads/cv/{{cv}}" class="btn btn-verde" target="_blank">
        Ver CV
      </a>
    </div>
  </div>
  {{/each}}
  {{else }}
  <p>No hay candidatos a√∫n </p>

  {{/if}}
  <div class="" style="margin-top: 50px; margin-bottom: 45px;">
    <a href="/administracion" class="btn btn-azul editar-btn" style="width: 25%; float: right;">Volver a administracion</a>
  </div>
</main>